---
import Navbar from '@components/layout/Navbar.astro';
import '@fontsource-variable/space-grotesk';

const {
	title,
	description = "Hi!, My name is Nico and I'm software engineer.",
	canonical,
	ogImage = 'https://www.nicolasmontiel.dev/img/profile.png',
} = Astro.props;

const pageTitle = title ? `${title} | Nicol치s Montiel` : 'Home | Nicol치s Montiel';
---

<!doctype html>
<html lang="en">
	<head>
		{!import.meta.env.DEV && (
			<>
				<!-- Google tag (gtag.js) -->
				<script async src="https://www.googletagmanager.com/gtag/js?id=G-FS54TMLFTL"></script>
				<script is:inline>
					window.dataLayer = window.dataLayer || [];
					function gtag(){dataLayer.push(arguments);}
					gtag('js', new Date());

					gtag('config', 'G-FS54TMLFTL');
				</script>
			</>
		)}
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
        <meta name="author" content="Nicol치s Montiel" />
        <meta name="viewport" content="width=device-width" />

        <!-- Facebook meta tags -->
        <meta property="og:title" content={pageTitle} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:url" content={canonical || 'https://www.nicolasmontiel.dev'} />
		<meta property="og:site_name" content="Nicol치s Montiel &mdash; Software Engineer"/>
		<meta property="og:description" content={description} />

        <!-- Twitter meta tags -->
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:image" content={ogImage} />
		<meta name="twitter:url" content={canonical || 'https://www.nicolasmontiel.dev'} />

		{canonical && <link rel="canonical" href={canonical} />}
		<slot name="head" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>

	<body class="max-w-screen-lg lg:px-0 px-3 mx-auto bg-slate-50 text-slate-600 mb-40 selection:bg-indigo-100 selection:text-indigo-900">
        <div class="lg:mb-5">
            <Navbar />
        </div>

        <main class="py-5">
            <slot />
        </main>

	</body>
</html>
